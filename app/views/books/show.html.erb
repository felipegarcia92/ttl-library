<div>
  <h1>Title</h1>
  <h1><%= book.title %></h1>
  <h3>ISBN</h3>
  <%= book.isbn %>
  <h3>Year of Published</h3>
  <%= book.year %>
  <h3>Author</h3>
  <%= "#{book.author.first_name}  #{book.author.last_name}"%>

  <h1>Comment List</h1>
  <% book.comments.each do |comment| %>
    <%= "#{comment.user.email}: '#{comment.text}' - #{comment.rating} stars" %>
  <% end %>

  <h1>Add Comment</h1>
  <%= form_for([book, @new_comment]) do |c| %>
    <%= c.label :text %>
    <%= c.text_field :text %>

    <%= c.label :rating %>
    <%= c.select :rating, options_for_select((1..5).to_a) %>

    <%= c.submit "Add Comment" %>
  <% end %>
</div>
